<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.heyalex.CornerDrawer
            android:id="@+id/corner_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerDrawer"
            app:content_color="@color/colorPrimary"
            app:content_view="@layout/corner_drawer_content"
            app:header_color="@color/corner_drawer_header_color"
            app:header_view="@layout/corner_drawer_header"
            app:layout_behavior="com.github.heyalex.CornerDrawerBehavior" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

